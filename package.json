{
  "name": "sport-visioner",
  "version": "0.0.1-0",
  "description": "A sample application based on the Decathlon Sport Vision API",
  "author": "Thomas Vanier <thomas.vanier@gmail.com>",
  "scripts": {
    "lint": "standard src *.js",
    "dev": "vite",
    "test": "jest src",
    "test:watch": "npm run test -- --watch",
    "build": "vite build",
    "serve": "vite preview"
  },
  "devDependencies": {
    "@babel/preset-env": "7.22.5",
    "@testing-library/jest-dom": "5.16.5",
    "@testing-library/svelte": "4.0.1",
    "canvas": "2.11.2",
    "eslint": "8.43.0",
    "jest": "29.5.0",
    "jest-environment-jsdom": "29.5.0",
    "jest-svelte-events": "1.0.5",
    "rollup-plugin-svelte": "7.1.5",
    "standard": "17.1.0",
    "svelte": "3.59.1",
    "svelte-jester": "2.3.2",
    "svelte-select": "5.6.1",
    "vite": "4.3.9"
  },
  "dependencies": {
    "@vtmn/css-button": "1.1.1",
    "@vtmn/css-design-tokens": "1.1.0",
    "typeface-roboto": "1.1.13",
    "typeface-roboto-condensed": "1.1.13"
  },
  "standard": {
    "globals": [
      "fetch"
    ]
  },
  "jest": {
    "transformIgnorePatterns": [
      "node_modules/(?!(@testing-library/svelte)/)"
    ],
    "transform": {
      "^.+\\.js$": "babel-jest",
      "^.+\\.svelte$": "svelte-jester"
    },
    "moduleFileExtensions": [
      "js",
      "svelte"
    ],
    "setupFilesAfterEnv": [
      "@testing-library/jest-dom/extend-expect",
      "jest-svelte-events/extend-expect"
    ],
    "testEnvironment": "jsdom",
    "testEnvironmentOptions": {
      "resources": "usable"
    }
  }
}
